<tal:block metal:define-macro="compList">
<form method="post" tal:attributes="action here/os/absolute_url" 
    name="collectionsListForm">

<tal:block metal:define-macro="collectionsList"
    tal:define="tableName string:collectionsList;
    objects here/os/collections/objectValuesAll;
    tabletitle string:Collections;
    batch python:here.ZenTableManager.getBatch(tableName,objects,
                                            sortedHeader='name',
                                            onlyMonitored=True);
    ts python:here.ZenTableManager.getTableState(tableName);
    showfilterbox python:True;"
    tal:condition="objects">
<tal:block metal:use-macro="here/zenuimacros/macros/zentable">

<tal:block metal:fill-slot="filterslot">
    <div style="position:absolute;right:200px;top:0px;">
                        Monitored
                        <input class="navcontrol" type="checkbox"
                                name="onlyMonitored"
                                onchange="this.form.submit()"
                                value="1"
                style="margin-top:-2px;margin-bottom:2px;"
                                tal:attributes="checked ts/onlyMonitored" />
    </div>
    <tal:block metal:use-macro="here/zenuimacros/macros/filterbox"/>
</tal:block>
<tal:block metal:fill-slot="zentablecontents">

<!-- BEGIN TABLE CONTENTS -->
    <tr tal:condition="objects">
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'name','Name')">Name
        </th>
        <th class="tableheader" align="center" width="60">Status</th>
    </tr>
    <tal:block tal:repeat="collection batch">
    <tr tal:define="odd repeat/collection/odd"
        tal:attributes="class python:test(odd, 'odd', 'even')">

      <td class="tablevalues">
          <tal:block
           tal:content="structure python:collection.urlLink(
                        text=collection.name(),attrs={'class':'tablevalues'})"/>
      </td>
      <td class="tablevalues" align="center" width="40">
        <img border="0" tal:attributes="src 
        python:collection.getStatusImgSrc(collection.getStatus())" />
      </td>
    </tr>
    </tal:block>
    <tr>
        <td colspan="2" class="tableheader" align='center'>
        <form metal:use-macro="here/zenTableNavigation/macros/navtool"></form>
        </td>
    </tr>

<!-- END TABLE CONTENTS -->

</tal:block>
</tal:block>
</tal:block>


</form>
</tal:block>
